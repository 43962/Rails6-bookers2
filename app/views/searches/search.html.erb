<% if @range == "User" %>
 <h2>Users search for "<%= params[:word] %>"</h2>
<% else %>
 <h2>Books search for "<%= params[:word] %>"</h2>
<% end %>

<table class="table table-hover table-inverse">

  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <thead>
    <tr>
     <th>Image</th>
     <th>Name</th>
     <th></th>
     <th></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
    </tr>
  </thead>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
